#version 330


////////////////////////////////////////////////////////////////////////////////
// Variables
////////////////////////////////////////////////////////////////////////////////


layout(std140) uniform StandardUniforms {
	mat4 projection;
	mat4 view;
	mat4 model;
};
in vec4 in_Position;


////////////////////////////////////////////////////////////////////////////////
// Functions
////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
void main() {
	gl_Position = projection * view * model * in_Position;
}
